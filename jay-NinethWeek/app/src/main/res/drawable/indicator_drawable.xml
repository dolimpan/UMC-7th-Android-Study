<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택된 인디케이터 (보라색) -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="#800080" /> <!-- 보라색 -->
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>

    <!-- 선택되지 않은 인디케이터 (회색) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#C0C0C0" /> <!-- 회색 -->
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>
</selector>