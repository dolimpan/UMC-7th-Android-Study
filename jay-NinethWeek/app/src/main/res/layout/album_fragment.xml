<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/album_pannel_back_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:rotation="180"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:src ="@drawable/btn_main_arrow_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/album_pannel_heart_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd
            ="15dp"
        android:src ="@drawable/ic_my_like_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/album_pannel_back_iv"/>


    <ImageView
        android:id="@+id/album_pannel_etc_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:src ="@drawable/btn_player_more"
        app:layout_constraintEnd_toStartOf="@id/album_pannel_heart_iv"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/album_pannel_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALBUM TITLE"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="22sp"
        android:paddingTop="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_pannel_heart_iv" />
    />

    <TextView
        android:id="@+id/album_pannel_artist_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ARTIST"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="2dp"
        android:textColor="#060606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_pannel_title_tv" />
    />

    <TextView
        android:id="@+id/album_pannel_info_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXTRA | EXTRA | EXTRA"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="2dp"
        android:textColor="#060606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_pannel_artist_tv" />
    />
    <ImageView
        android:id="@+id/album_pannel_album_iv"
        app:layout_constraintTop_toBottomOf="@id/album_pannel_info_tv"
        android:paddingTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/img_album_exp2"
        />



</androidx.constraintlayout.widget.ConstraintLayout>